extends base

block content
    if errorMessage 
        span(style="color:red")=errorMessage
    form(method="POST")
        input(required, placeholder="Old Password" type="password" name="oldPassword") 
        input(required, placeholder="New Password" type="password" name="newPassword") 
        input(required, placeholder="New Password Confirmation" type="password" name="newPassword1")
        input(type="submit", value="Change Password")